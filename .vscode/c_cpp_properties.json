{
    "configurations": [
      {
        "name": "Win32",
        "includePath": [
          "${workspaceFolder}",
          "C:/MinGW/include",            // если MinGW
          "C:/MinGW/x86_64-w64-mingw32/include"
          // или если MSVC, то:
          // "C:/Program Files (x86)/Windows Kits/10/Include/10.0.XXXX.0/shared"
        ],
        "defines": [
          "_DEBUG",
          "UNICODE"
        ],
        "windowsSdkVersion": "10.0.19041.0", // или какую у вас
        "compilerPath": "C:/MinGW/bin/g++.exe", // или путь к cl.exe от MSVC
        "cStandard": "c11",
        "cppStandard": "c++17",
        "intelliSenseMode": "gcc-x64" // или "msvc-x64", если MSVC
      }
    ],
    "version": 4
  }
  